flexAndCenter()
  display: flex
  justify-content: center
  align-items: center

roundCornerCard()
  margin-bottom: 14px
  border-radius: 4px
  border: none
  box-shadow: 0 1px 4px rgba(0,0,0,.1)

:local(.layout)
  position: absolute
  padding: 10px
  top: 64px
  bottom: 0
  width: 100%
  overflow-y: auto
  flexAndCenter()
  align-items: baseline

:local(.content-wrapper)
  width: 100%
  max-width: 1214px

:local(.post-sheet)
  roundCornerCard()
  margin-top: 20px

:local(.comment)
  roundCornerCard()
  margin-top: 20px