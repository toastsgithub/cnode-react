flexAndCenter()
  display: flex
  justify-content: center
  align-items: center

roundCornerCard()
  margin-bottom: 14px
  border-radius: 4px
  border: none
  box-shadow: 0 1px 4px rgba(0,0,0,.1)

:local(.layout)
  position: absolute
  padding: 10px
  padding-top: 0
  top: 50px
  bottom: 0
  width: 100%
  overflow-y: auto
  flexAndCenter()
  align-items: baseline

:local(.layout) a
  word-wrap: break-word

:local(.layout) code
  word-wrap: break-word
  white-space normal

:local(.content-wrapper)
  width: 100%
  max-width: 1214px
  display: flex

:local(.content-body)
  position: relative
  border: none
  border-radius: 0
:local(.content-body) > .ant-card-body
  padding: 15px


:local(.content-header)
  min-height: 87px
  border-bottom: solid 1px #eee
  background: #fafafa
  width: 100%
  padding: 15px
  display: flex

:local(.header-title)
  flex: 1

:local(.comment)
  position: relative

:local(.timeline)
  width: 2px
  height: 100%
  left: 77px
  position: absolute
  background: #ccc

:local(.post-sheet)
  box-shadow: 0 1px 4px rgba(0,0,0,0.1)

:local(.post-info)
  width: 300px
  margin-left: 10px



@media (max-width: 900px)
  :local(.post-info)
    display: none