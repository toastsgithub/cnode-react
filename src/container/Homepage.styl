
roundCornerCard()
  margin-bottom: 14px
  border-radius: 4px
  border: none
  box-shadow: 0 1px 4px rgba(0,0,0,.1)

:local(.layout)
  background: #ECEFF1
  width: 100%
  position: absolute
  top: 64px
  bottom: 0
  overflow-y: auto

:local(.content)
  padding: 0 20px
  padding-top: 14px
  display:flex
  justify-content: center

:local(.posts-column)
  flex:1

:local(.info-column)
  width: 280px
  // border: dotted 1px red
  margin-left: 15px
  
:local(.info-card)
  roundCornerCard()

:local(.new-topic-btn)
  width: 100%
  margin-top: 10px

@media (max-width: 900px)
  :local(.info-column)
    display: none