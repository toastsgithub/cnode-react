roundCornerCard()
  margin-bottom: 14px
  border-radius: 4px
  border: none
  box-shadow: 0 1px 4px rgba(0,0,0,.1)

:local(.layout)
  display: flex

:local(.comment)
  // roundCornerCard()
  flex: 1
  position: relative

:local(.comment) > .ant-card-body
  padding: 15px

:local(.caret)
  position: absolute
  border: solid 10px transparent
  left: -20px
  top: 7px
  display: inline
  border-right: solid 10px white

:local(.comment-avatar)
  margin-right: 20px
  // box-shadow: 0 1px 4px rgba(0, 0, 0, 0.34)

:local(.comment-content)
  min-width: 0
  flex: 1

:local(.comment-menu)
  display: flex
  justify-content: space-between

