:local(.post-card)
  margin-bottom: 14px
  border-radius: 4px
  border: none
  box-shadow: 0 1px 4px rgba(0,0,0,.1)

:local(.post-author)
  padding: 0 10px
  display: inline-block

:local(.post-title)
  cursor: pointer
  font-size: 20px
  font-weight: 600

:local(.post-content)
  word-break: break-all

:local(.post-info-wrapper)
  display: flex
  justify-content: space-between

:local(.post-avatar)
  border: solid 1px #ccc

:local(.post-footer)
  display: flex
  margin-top: 10px

:local(.post-footer>div)
  margin-right: 15px