baseColor = white
:local(.button)
  cursor: pointer
  // margin: 0 5px
  border: none
  transition: .2s
  outline: none
  border-radius: 3px

:local(.button):hover
  transition: .2s
  background: darken(baseColor, 10)

:local(.button):active
  transition: .2s
  background: darken(baseColor, 20)

:local(.button.circled)
  border-radius: 100%
  line-height: 100%